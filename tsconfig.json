{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@app/mongoose-uuid": [
        "libs/mongoose-uuid/src"
      ],
      "@app/mongoose-uuid/*": [
        "libs/mongoose-uuid/src/*"
      ],
      "@app/mongoose-eloquent": [
        "libs/mongoose-eloquent/src"
      ],
      "@app/mongoose-eloquent/*": [
        "libs/mongoose-eloquent/src/*"
      ]
    }
  }
}